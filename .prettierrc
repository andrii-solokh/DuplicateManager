{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "lwc"
            }
        },
        {
            "files": "*.{cls,trigger}",
            "options": {
                "parser": "apex",
                "tabWidth": 4,
                "printWidth": 120
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "proseWrap": "always"
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
